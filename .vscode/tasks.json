{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-flash",
            "type": "shell",
            "command": "./utils/flash.sh",
            "args": [
                "esp32:esp32:feathers2",
                "/dev/cu.usbmodem14101",
                "/dev/cu.usbmodem14101"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "showReuseMessage": false
           }
        },
        {
            "label": "alt-port-build-and-flash",
            "type": "shell",
            "command": "./utils/flash.sh",
            "args": [
                "esp32:esp32:feathers2",
                "/dev/cu.usbmodem01",
                "/dev/cu.usbmodem14101"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "showReuseMessage": false
           }
        },
        {
            "label": "run-local",
            "type": "shell",
            "command": "./songbird",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build-local"
            ],
            "presentation": {
                "showReuseMessage": false
           }
        },
        {
            "type": "shell",
            "label": "build-local",
            "command": "./utils/local.sh",
            "args": [
                "-std=c++11",
                "-stdlib=libc++",
                "-D__MACOSX_CORE__",
                "-g",
                "songbird.cpp",
                "libraries/**/*.cpp",
                "-framework",
                "CoreMIDI",
                "-framework",
                "CoreAudio",
                "-framework",
                "CoreFoundation",
                "-o",
                "songbird"
              ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "showReuseMessage": false
           }
        },
        { // Requires chip to be in bootloader mode
            "label": "flash-files", 
            "type": "shell",
            "command": "./utils/files.sh",
            "args": [
                "files",
                "0xbef000",
                "esp32s2",
                "/dev/cu.usbmodem01",
                "921600",
                "0x411000"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "showReuseMessage": false
           }
        },
    ]
}